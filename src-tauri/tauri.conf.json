{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TypeTrans",
  "version": "0.1.0",
  "identifier": "com.typetrans.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "TypeTrans",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "translator",
        "title": "Translator",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "fullscreen": false,
        "resizable": true,
        "width": 420,
        "height": 200,
        "minWidth": 320,
        "minHeight": 180,
        "center": true
      },
      {
        "label": "settings",
        "title": "Settings",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": false,
        "resizable": false,
        "width": 520,
        "height": 280,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/mkdir700/typetrans/releases/latest/download/latest.json"
      ],
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}